<div class="l-atlas-container__aside" id="js-atlas-aside" role="contentinfo">
    <script>
        document.getElementById('js-atlas-aside').style.width =
            window.sessionStorage && (window.sessionStorage.getItem('asideWidth')) ?
                window.sessionStorage.getItem('asideWidth') + 'px' : '';
    </script>
    <div class="atlas-aside">
        <div class="atlas-aside__header">
            <div class="atlas-header">
                <div class="atlas-header__logo" role="banner">
                    {{>logo}}
                </div>
                <div class="atlas-theme-switcher" style="--color-primary-800: #0028c8;">
                    <div class="atlas-theme-switcher__switch">
                        <input type="radio" class="atlas-theme-switcher__radio" name="theme" id="nothing" value="nothing" checked>
                        <label for="nothing">Default</label>
                    </div>

                    <div class="microsite-1 atlas-theme-switcher__switch">
                        <input type="radio" class="atlas-theme-switcher__radio" name="theme" id="microsite-1" value="microsite-1">
                        <label for="microsite-1">01</label>
                    </div>

                    <div class="microsite-2 atlas-theme-switcher__switch">
                        <input type="radio" class="atlas-theme-switcher__radio" name="theme" id="microsite-2" value="microsite-2">
                        <label for="microsite-2">02</label>
                    </div>

                    <div class="microsite-3 atlas-theme-switcher__switch">
                        <input type="radio" class="atlas-theme-switcher__radio" name="theme" id="microsite-3" value="microsite-3">
                        <label for="microsite-3">03</label>
                    </div>

                    <div class="microsite-4 atlas-theme-switcher__switch">
                        <input type="radio" class="atlas-theme-switcher__radio" name="theme" id="microsite-4" value="microsite-4">
                        <label for="microsite-4">04</label>
                    </div>

                    <div class="microsite-5 atlas-theme-switcher__switch">
                        <input type="radio" class="atlas-theme-switcher__radio" name="theme" id="microsite-5" value="microsite-5">
                        <label for="microsite-5">05</label>
                    </div>
                </div>

                <div class="atlas-header__search">
                    <div class="atlas-search" role="search">
                        <svg class="atlas-search__icon" width="14" height="14" role="img"><use xlink:href="#icon-filter"></use></svg>
                        <input class="atlas-search__input" type="search" id="js-atlas-search" placeholder="Filter" autocomplete="off"/>
                        <button class="atlas-search__clear" id="js-atlas-search-clear" title="Clear input">
                            <svg width="8" height="14" role="img"><use xlink:href="#icon-cancel"></use></svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="atlas-aside__content" role="navigation" id="js-atlas-aside-content">
            <div class="atlas-nav" role="list" id="js-atlas-navigation">
                {{> navigation}}
            </div>
            <script>
                const atlasContentPosition = window.sessionStorage && (window.sessionStorage.getItem('navigationScroll')) ?
                    window.sessionStorage.getItem('navigationScroll') : '';
                document.getElementById('js-atlas-aside-content').scrollTo(0, atlasContentPosition);
            </script>

            <script>
                const themeRadios = document.querySelectorAll('.atlas-theme-switcher__radio');
                const body = document.body;
                let currentTheme = null;

                themeRadios.forEach(radio => {
                    radio.addEventListener('change', event => {
                        const theme = event.target.value;

                        if (currentTheme) {
                            body.classList.remove(currentTheme);
                        }
                        currentTheme = theme;
                        body.classList.add(theme);
                    });
                });
            </script>
        </div>
        <div class="atlas-aside__footer">
            {{> copyright}}
        </div>
    </div>
    <button class="atlas-aside-ctrl" id="js-atlas-aside-resizer" title="Double click to toggle aside"></button>
    <div class="atlas-aside-resizer-overlay" id="js-atlas-aside-resizer-overlay"></div>
</div>
